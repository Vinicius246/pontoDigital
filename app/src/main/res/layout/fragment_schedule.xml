        <TextView
            android:id="@+id/textViewWednesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quarta-feira" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/viewThursday"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/border"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewWednesday">

        <TextView
            android:id="@+id/textViewThursday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quinta-feira" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/viewFriday"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/border"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
